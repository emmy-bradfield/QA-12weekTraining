package garageChallenge;

public class Car extends Vehicle {

	Integer age;
	String type;

	public Car(String make, String transmission, Integer age) {
		super(make, transmission);
		type = "Car";
		this.age = age;

	}
	
	public int getAge() {
		return age;
	}

	@Override
	public static Double costOfRepairs() {
		double Cost = 0;
		Integer FlatRate = 50;
		getAge();
		if (age >= 10) {
			Cost = FlatRate + 50;
		}
		if (make == "Ford") {
			Cost = Cost/1.5;
		} else if (make == "BMW") {
			Cost = Cost/0.5;
		}
		return Cost;
	}
}
