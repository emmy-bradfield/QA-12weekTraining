package garageChallenge;

public class Main{
	
	public static void main(String[] args) {
		System.out.println("= = = = = = = = = = = = TASK ONE = = = = = = = = = = =");
		System.out.println("Task completed, see java file");
		
		System.out.println("\n\n= = = = = = = = = = = = TASK TWO = = = = = = = = = = =");
		Garage garage = new Garage();
		Vehicle car = new Car(1, 4, "Blue", 2020, "Audi", true);
		Vehicle motobike = new Motobike(2, 2, "White", 2020, 125, "Yamaha");
		Vehicle van = new Van(3, 4, "Grey", 2020, "Mercedes",98302);
		
		System.out.println("\n\n= = = = = = = = = = = = TASK THREE = = = = = = = = = = =");
		garage.currentJobs();
		
		System.out.println("\n\n= = = = = = = = = = = = TASK FOUR = = = = = = = = = = =");
		garage.emptyGarage();
		garage.addCar(4, "Black", 2009, "Ford", false, 2, false, true);
		garage.addCar(4, "Purple", 2021, "Volkswagen", true, 0, true, true);
		garage.addMotobike(2, "Black", 2012, 250, "Yamaha", 1, true, false);
		garage.addVan(4, "White", 2002, "Peugeot", 126873, 4, true, false);
		garage.addVan(20, "Green", 1900, "Your Mum", 696969, 19, true, true);
		garage.fixVehicle(2);
		garage.removeVehicle(5);
		
		System.out.println("= = = = = = = = = = = = TASK FIVE = = = = = = = = = = =");
		garage.currentJobs();
		garage.clearMotobikes();
		garage.currentJobs();
	}

}
