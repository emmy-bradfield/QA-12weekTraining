package com.qa.singleResponsibility;

public class Mechanic {
	
	String name;
	Integer cost;
	
	public Mechanic(String name, Integer cost) {
		this.name = name;
		this.cost = 0;
	}

	public void addSpoiler(Car car) {
		car.setSpoiler(true);
	}
	
	public void repaint(String colour, Car car) {
		car.setColour(colour);
	}
	
}
