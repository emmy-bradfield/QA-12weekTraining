package optionals;

import java.util.Optional;

public class Runner {

	public static void main(String[] args) {
		Fruit apple = new Fruit();
		if(Math.random() >=0.5) {
			apple.name = "Apple";
			apple.colour = "red";
			apple.quantity = 1;
		} else {
			apple.name = null;
			apple.colour = null;
			apple.quantity = null;
		}
		Optional.ofNullable(apple.name);

	}

}
